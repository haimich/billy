{
  "name": "billy",
  "version": "0.0.1",
  "description": "A billing tool for Cristina.",
  "main": "./build/src/index.js",
  "scripts": {
    "setup": "npm run rebuild",
    "recreate-database": "rm -f bills.sqlite && knex migrate:latest && knex seed:run",
    "build": "npm run clean && tsc && npm run copy-html",
    "clean": "rm -rf build/*",
    "clean:mac": "rm -rf ~/Library/Application\\ Support/billy/Settings",
    "prestart": "npm run build",
    "start": "electron .",
    "test": "npm run build && electron-mocha build/test/**/*Test.js",
    "watch:test": "chokidar --initial -c 'npm test' 'src/*.ts' 'src/**/*.ts' 'test/**/*.ts'",
    "update-dependencies": "ncu -u",
    "watch": "tsc -w",
    "copy-html": "cp static/*.html build/src",
    "rebuild": "electron-rebuild",
    "publish:mac": "npm run build && electron-packager . Billy --platform=darwin --arch=x64 --version=1.3.4 --out=output --overwrite --icon=static/images/billy.icns"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haimich/billy.git"
  },
  "keywords": [],
  "engines": {
    "node": ">= 6.0.0"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/haimich/billy/issues"
  },
  "dependencies": {
    "basic-csv": "0.0.2",
    "bootstrap": "^3.3.6",
    "electron": "^1.3.5",
    "electron-is-dev": "^0.1.2",
    "electron-settings": "^2.2.1",
    "knex": "^0.12.1",
    "mkdirp": "^0.5.1",
    "moment": "^2.14.1",
    "open": "0.0.5",
    "react": "^15.2.1",
    "react-bootstrap-table": "^2.5.1",
    "react-bootstrap-typeahead": "^0.9.2",
    "react-datetime": "^2.6.0",
    "react-dom": "^15.3.0",
    "react-notification-system": "^0.2.9",
    "sqlite3": "^3.1.4"
  },
  "devDependencies": {
    "@types/chai": "^3.4.32",
    "@types/electron": "^1.3.17",
    "@types/knex": "0.0.33",
    "@types/mkdirp": "^0.3.28",
    "@types/mocha": "^2.2.31",
    "@types/ncp": "^0.5.28",
    "@types/node": "^6.0.33",
    "@types/react": "^0.14.32",
    "@types/react-bootstrap-table": "^2.3.29",
    "@types/react-dom": "^0.14.14",
    "@types/react-notification-system": "^0.2.28",
    "chai": "^3.5.0",
    "chokidar-cli": "^1.2.0",
    "devtron": "^1.3.0",
    "electron": "^1.3.4",
    "electron-mocha": "^3.1.0",
    "electron-packager": "^8.0.0",
    "electron-react-devtools": "github:firejune/electron-react-devtools",
    "electron-rebuild": "^1.2.1",
    "electron-reload": "^1.0.2",
    "mocha": "^3.0.2",
    "npm-check-updates": "^2.8.0",
    "typescript": "^2.1.0-dev.20160824"
  }
}
