{
  "name": "billy",
  "version": "0.0.1",
  "description": "A billing tool for Cristina.",
  "main": "./build",
  "scripts": {
    "setup": "npm run prepare-database && npm run rebuild",
    "build": "npm run clean && tsc && npm run copy-html",
    "clean": "rm -rf build/",
    "prestart": "npm run build",
    "start": "npm run start-electron",
    "start-electron": "electron .",
    "prepare-database": "knex migrate:latest && knex seed:run",
    "watch": "chokidar --initial -c 'killall electron || npm run start' src/*.ts* src/**/*.ts*",
    "copy-html": "cp index.html build",
    "rebuild": "electron-rebuild"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haimich/billy.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/haimich/billy/issues"
  },
  "dependencies": {
    "bootstrap": "^3.3.6",
    "knex": "^0.11.10",
    "moment": "^2.14.1",
    "react": "^15.2.1",
    "react-dom": "^15.3.0",
    "sqlite3": "^3.1.4"
  },
  "devDependencies": {
    "@types/electron": "^1.3.17",
    "@types/knex": "0.0.30",
    "@types/node": "^6.0.33",
    "@types/react": "^0.14.32",
    "@types/react-dom": "^0.14.14",
    "chokidar-cli": "^1.2.0",
    "electron-prebuilt": "^1.2.6",
    "electron-react-devtools": "github:firejune/electron-react-devtools",
    "electron-rebuild": "^1.2.0",
    "typescript": "^2.1.0-dev.20160824"
  }
}
