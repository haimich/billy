{
  "name": "billy",
  "version": "0.0.5",
  "description": "A simple invoice manager built with Electron.",
  "main": "./buildtmp/src/index.js",
  "scripts": {
    "setup": "npm run install-platform-specific && npm run rebuild && npm run recreate-database",
    "install-platform-specific": "npm install sqlite3 --build-from-source",
    "rebuild": "electron-rebuild",
    "recreate-database": "rimraf bills.sqlite && knex migrate:latest && knex seed:run",
    "build": "npm run clean && tsc && npm run copy-html",
    "clean": "rimraf buildtmp/*",
    "clean:mac": "rimraf ~/Library/Application\\ Support/billy/Settings",
    "prestart": "npm run build",
    "start": "NODE_ENV=development electron .",
    "test": "npm run build && NODE_ENV=development electron-mocha 'buildtmp/test/**/*Test.js'",
    "watch:test": "nodemon -w ./src -w ./test -e ts,tsx -x npm test",
    "watch": "tsc -w",
    "copy-html": "cp static/*.html buildtmp/src",
    "dist:mac": "build --mac",
    "dist:win": "build --win",
    "dist:linux": "build --linux",
    "publish:mac": "build --publish onTagOrDraft"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haimich/billy.git"
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "author": "Michael Mueller",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/haimich/billy/issues"
  },
  "dependencies": {
    "basic-csv": "0.0.2",
    "bootstrap": "^3.3.6",
    "chart.js": "^1.1.1",
    "electron-is-dev": "^0.1.2",
    "electron-settings": "^2.2.1",
    "font-awesome": "^4.7.0",
    "knex": "^0.12.5",
    "mkdirp": "^0.5.1",
    "moment": "^2.14.1",
    "open": "0.0.5",
    "react": "^15.2.1",
    "react-bootstrap-table": "^2.5.1",
    "react-bootstrap-typeahead": "^0.9.2",
    "react-chartjs": "^0.8.0",
    "react-countup": "^1.3.0",
    "react-datetime": "^2.6.0",
    "react-dom": "^15.3.0",
    "react-notification-system": "^0.2.9",
    "react-textarea-autosize": "^4.0.5",
    "rimraf": "^2.5.4",
    "sqlite3": "^3.1.6"
  },
  "devDependencies": {
    "@types/chai": "^3.4.32",
    "@types/electron": "^1.3.17",
    "@types/knex": "0.0.33",
    "@types/mkdirp": "^0.3.28",
    "@types/mocha": "^2.2.31",
    "@types/node": "^6.0.33",
    "@types/react": "^0.14.32",
    "@types/react-bootstrap-table": "^2.3.29",
    "@types/react-dom": "^0.14.14",
    "@types/react-notification-system": "^0.2.28",
    "@types/react-textarea-autosize": "^4.0.5",
    "@types/rimraf": "0.0.28",
    "chai": "^3.5.0",
    "chance": "^1.0.4",
    "devtron": "^1.3.0",
    "electron": "^1.4.0",
    "electron-builder": "^10.17.3",
    "electron-mocha": "^3.1.0",
    "electron-react-devtools": "github:firejune/electron-react-devtools",
    "electron-rebuild": "^1.2.1",
    "electron-reload": "^1.0.2",
    "mocha": "^3.0.2",
    "nodemon": "^1.11.0",
    "typescript": "^2.0.3"
  },
  "build": {
    "productName": "Billy",
    "appId": "com.github.haimich.billy",
    "publish": ["github"],
    "mac": {
      "category": "public.app-category.finance"
    },
    "win": {
      "iconUrl": "https://github.com/haimich/billy/blob/master/build/icon.ico?raw=true"
    },
     "dmg": {
      "title": "Billy",
      "backgroundColor": "#eefcfd",
      "window": {
        "width": "540",
        "height": "380"
      }
    }
  }
}
