{
  "name": "billy",
  "version": "0.0.1",
  "description": "A billing tool for Cristina.",
  "main": "./build",
  "scripts": {
    "setup": "npm run rebuild",
    "build": "npm run clean && tsc && npm run copy-html",
    "clean": "rm -rf build/*",
    "clean:mac": "rm -rf ~/Library/Application\\ Support/billy/Settings",
    "prestart": "npm run build",
    "start": "electron .",
    "update-dependencies": "ncu -u",
    "watch": "tsc -w",
    "copy-html": "cp static/*.html build",
    "rebuild": "electron-rebuild --version 1.3.4",
    "publish:mac": "npm run build && electron-packager . Billy --platform=darwin --arch=x64 --version=1.3.4 --out=output --overwrite --icon=static/images/billy.icns"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haimich/billy.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/haimich/billy/issues"
  },
  "dependencies": {
    "basic-csv": "0.0.2",
    "bootstrap": "^3.3.6",
    "electron-is-dev": "^0.1.2",
    "electron-settings": "^2.1.1",
    "knex": "^0.11.10",
    "mkdirp": "^0.5.1",
    "moment": "^2.14.1",
    "react": "^15.2.1",
    "react-bootstrap-table": "^2.5.0",
    "react-datetime": "^2.5.0",
    "react-dom": "^15.3.0",
    "react-notification-system": "^0.2.9",
    "sqlite3": "^3.1.4"
  },
  "devDependencies": {
    "@types/electron": "^1.3.17",
    "@types/knex": "0.0.32",
    "@types/mkdirp": "^0.3.28",
    "@types/node": "^6.0.33",
    "@types/react": "^0.14.32",
    "@types/react-bootstrap-table": "^2.3.29",
    "@types/react-dom": "^0.14.14",
    "@types/react-notification-system": "^0.2.28",
    "devtron": "^1.3.0",
    "electron": "^1.3.4",
    "electron-packager": "^7.7.0",
    "electron-react-devtools": "github:firejune/electron-react-devtools",
    "electron-rebuild": "^1.2.0",
    "electron-reload": "^1.0.2",
    "npm-check-updates": "^2.8.0",
    "typescript": "^2.1.0-dev.20160824"
  }
}
