{
  "name": "billy",
  "version": "0.0.1",
  "description": "A billing tool for Cristina.",
  "main": "./build",
  "scripts": {
    "setup": "npm run prepare-database && npm run rebuild",
    "build": "npm run clean && tsc && npm run copy-html",
    "clean": "rm -rf build/",
    "prestart": "npm run build",
    "start": "npm run start-electron",
    "start-electron": "electron .",
    "prepare-database": "knex migrate:latest && knex seed:run",
    "update-dependencies": "ncu -u",
    "watch": "tsc -w",
    "copy-html": "cp static/index.html build",
    "rebuild": "electron-rebuild --version 1.3.4",
    "publish": "electron-packager . Billy --all --version=1.3.4 --out=output --overwrite --icon=app-icon.icns"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haimich/billy.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/haimich/billy/issues"
  },
  "dependencies": {
    "bootstrap": "^3.3.6",
    "electron-is-dev": "^0.1.2",
    "knex": "^0.11.10",
    "moment": "^2.14.1",
    "react": "^15.2.1",
    "react-bootstrap-table": "^2.5.0",
    "react-dom": "^15.3.0",
    "react-notification-system": "^0.2.9",
    "sqlite3": "^3.1.4"
  },
  "devDependencies": {
    "@types/electron": "^1.3.17",
    "@types/knex": "0.0.32",
    "@types/node": "^6.0.33",
    "@types/react": "^0.14.32",
    "@types/react-bootstrap-table": "^2.3.29",
    "@types/react-dom": "^0.14.14",
    "@types/react-notification-system": "^0.2.28",
    "csv": "^1.1.0",
    "devtron": "^1.3.0",
    "electron": "^1.3.4",
    "electron-packager": "^7.7.0",
    "electron-react-devtools": "github:firejune/electron-react-devtools",
    "electron-rebuild": "^1.2.0",
    "electron-reload": "^1.0.2",
    "npm-check-updates": "^2.8.0",
    "promised-csv": "^1.0.1",
    "typescript": "^2.1.0-dev.20160824"
  }
}
